<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:padding="10dp"
    tools:context=".Activity.AddCardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_leave"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_clear"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Add New Card"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:padding="10dp"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_center_focus"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="#1D2245"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            android:backgroundTint="@color/purple_500"
            app:cardCornerRadius="10dp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:src="@drawable/img_1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Visa"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:textStyle="italic|bold"
                    android:padding="20dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_more_horiz"
                    android:layout_gravity="end"
                    android:padding="20dp"/>
                <TextView
                    android:id="@+id/tv_cardNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1111 2222 3333 4444"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Card Holder"
                    android:textColor="#90ffffff"
                    android:textSize="18sp"
                    android:layout_gravity="bottom"
                    android:paddingStart="20dp"
                    android:layout_marginBottom="50dp"/>
                <TextView
                    android:id="@+id/tv_cardHolder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Falonchi Pistonchi"
                    android:textSize="22sp"
                    android:textColor="@color/white"
                    android:layout_gravity="bottom"
                    android:paddingStart="20dp"
                    android:layout_marginBottom="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#90ffffff"
                    android:text="Expires"
                    android:textSize="18sp"
                    android:layout_gravity="bottom|end"
                    android:paddingEnd="22dp"
                    android:layout_marginBottom="50dp"/>
                <TextView
                    android:id="@+id/tv_cardDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08/21"
                    android:textSize="22sp"
                    android:textColor="@color/white"
                    android:layout_gravity="bottom|end"
                    android:paddingEnd="20dp"
                    android:layout_marginBottom="20dp"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Card Number"
            android:textColor="#90ffffff"
            android:textSize="18sp"
            android:layout_marginVertical="5dp"/>
        <EditText
            android:id="@+id/et_cardNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:hint="Enter your card number"
            android:textColorHint="@color/white"
            android:padding="10dp"
            android:layout_marginVertical="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Experation Date"
                    android:textColor="#90ffffff"
                    android:textSize="18sp"
                    android:layout_marginVertical="5dp"/>
                <EditText
                    android:id="@+id/et_cardDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:hint="DD/MM"
                    android:textColorHint="@color/white"
                    android:layout_marginVertical="5dp"
                    android:padding="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CVV"
                    android:textColor="#90ffffff"
                    android:textSize="18sp"
                    android:layout_marginVertical="5dp"/>
                <EditText
                    android:id="@+id/et_cardCVV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:hint="CVV"
                    android:layout_marginVertical="5dp"
                    android:textColorHint="@color/white"
                    android:padding="10dp"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Fullname"
            android:textColor="#90ffffff"
            android:textSize="18sp"
            android:layout_marginVertical="5dp"/>
        <EditText
            android:id="@+id/et_cardHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:hint="Enter your fullname"
            android:textColorHint="@color/white"
            android:padding="10dp"
            android:layout_marginVertical="5dp"/>

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Add New Card"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="30dp"
            android:backgroundTint="#7F2697"/>
    </LinearLayout>


</LinearLayout>